<Window x:Class="Company.VSPackage1.Forms.OpenProjectFileForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenProjectFileForm" Height="300" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2d2d30"
        BorderBrush="#007acc"
        BorderThickness="1">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5" />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Foreground="#959595" FontFamily="Consolas" FontSize="26">Open a solution file</TextBlock>

        <ListBox Name="lbItems" Grid.Row="1" Foreground="#dfdfdf" Background="#252526" BorderBrush="#656565" BorderThickness="1">
            <ListBoxItem>yourmom.cpp</ListBoxItem>
            <ListBoxItem>hi.cpp</ListBoxItem>
        </ListBox>
        <TextBox Grid.Row="3" Foreground="#dfdfdf" Background="#252526" BorderBrush="#656565" BorderThickness="1">Enter filename to search for</TextBox>
    </Grid>
</Window>
